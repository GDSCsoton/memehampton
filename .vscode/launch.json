    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run App",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "Run Web App",
            "request": "launch",
            "type": "dart",
            "deviceId": "chrome",
            "args": [
                "--web-renderer",
                "canvaskit",
                // Fixes the port for auth whitelisting purposes
                "--web-hostname",
                "localhost",
                "--web-port",
                "5000",
            ]
        },
        {
            "name": "Run App (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        }
    ]
}